{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "labels": {
      "app-name": "mds",
      "app": "${APP_LABEL}"
    },
    "name": "${NAME}",
    "namespace": "${NAMESPACE}"
  },
  "spec": {
    "containers": [
      {
        "command": [],
        "env": [],
        "image": "${IMAGE_PATH}:${IMAGE_TAG}",
        "imagePullPolicy": "Always",
        "name": "${NAME}",

        "resources": {
          "limits": {
            "cpu": "250m",
            "memory": "4Gi"
          },
          "requests": {
            "cpu": "100m",
            "memory": "1Gi"
          }
        },
        "volumeMounts": [{ "mountPath": "/var/log", "name": "logs-volume" }]
      }
    ],
    "volumes": [{ "name": "logs-volume", "emptyDir": {} }],
    "dnsPolicy": "ClusterFirst",
    "restartPolicy": "Never"
  }
}
