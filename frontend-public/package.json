{
  "name": "mds-react-public-app",
  "version": "0.1.0",
  "description": "React.js public frontend for MDS application",
  "private": true,
  "homepage": "${BASE_PATH}/",
  "dependencies": {
    "antd": "^3.12.3",
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-polyfill": "^6.26.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-cache-controller": "^1.1.0",
    "filepond": "^3.5.0",
    "filepond-plugin-file-validate-size": "^2.0.0",
    "filepond-plugin-file-validate-type": "^1.2.1",
    "hoist-non-react-statics": "^3.2.1",
    "keycloak-js": "^4.2.1",
    "less-loader": "^4.1.0",
    "prop-types": "^15.6.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-filepond": "^5.0.0",
    "react-lottie": "^1.2.3",
    "react-redux": "^5.0.7",
    "react-redux-loading-bar": "^4.0.5",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "antd-scss-theme-plugin": "^1.0.7",
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^1.1.11",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "3.6.0",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.15.2",
    "react-hot-loader": "^4.3.11",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-merge": "^4.1.2"
  },
  "optionalDependencies": {
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.4.3",
    "jest-canvas-mock": "^1.1.0",
    "jest-environment-jsdom": "^23.4.0",
    "jest-environment-jsdom-global": "^1.1.0",
    "jest-junit": "^3.7.0",
    "jest-localstorage-mock": "^2.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "puppeteer": "^1.4.0"
  },
  "scripts": {
    "serve": "cross-env HOST=0.0.0.0 PORT=3020 webpack-dev-server --hot --env development",
    "build": "webpack --env production",
    "build-serve": "npm run build && npm run start",
    "start": "node server.js",
    "ci-test": "CI=true jest --env=jsdom --testResultsProcessor=jest-sonar-reporter --updateSnapshot --runInBand --coverage",
    "lint": "eslint",
    "format:check": "prettier --config .prettierrc.json",
    "format:check-all": "prettier --config .prettierrc.json src/*.js && prettier --config .prettierrc.json src/**/*.js && prettier --config .prettierrc.json src/**/**/*.js",
    "format:write": "prettier --config .prettierrc.json --write",
    "format:write-all": "prettier --config .prettierrc.json src/*.js --write && prettier --config .prettierrc.json src/**/*.js --write && prettier --config .prettierrc.json src/**/**/*.js --write",
    "test": "jest --env=jsdom -u --runInBand",
    "test:watch": "jest --env=jsdom --watch -u --runInBand",
    "test:coverage": "jest --env=jsdom --coverage src --testResultsProcessor=jest-junit -u --runInBand"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost",
    "testEnvironment": "jest-environment-jsdom-global",
    "setupFiles": [
      "./src/setupTests.js",
      "jest-localstorage-mock",
      "jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!src/index.js",
      "!src/App.js",
      "!src/fetchEnv.js",
      "!src/assetsTransformer.js",
      "!src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/src/assetsTransformer.js"
    }
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./coverage/tests-report.xml"
  },
  "browserslist": [
    "> 0.1%"
  ]
}
