{
  "name": "mds-react-public-app",
  "version": "0.1.0",
  "description": "React.js public frontend for MDS application",
  "private": true,
  "homepage": "${BASE_PATH}/",
  "dependencies": {
    "@hot-loader/react-dom": "^16.8.6",
    "antd": "^3.19.8",
    "axios": "^0.19.0",
    "axios-mock-adapter": "^1.16.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-cache-controller": "^1.1.0",
    "filepond": "4.4.9",
    "filepond-plugin-file-validate-size": "^2.1.3",
    "filepond-plugin-file-validate-type": "^1.2.4",
    "filepond-polyfill": "^1.0.4",
    "hoist-non-react-statics": "^3.3.0",
    "keycloak-js": "^6.0.1",
    "less-loader": "^5.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "pm2": "^3.5.1",
    "prop-types": "^15.7.2",
    "query-string": "^6.8.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-filepond": "^7.0.1",
    "react-lottie": "^1.2.3",
    "react-redux": "^7.1.0",
    "react-redux-loading-bar": "^4.3.0",
    "react-responsive": "^7.0.0",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.1",
    "redux-form": "^8.2.4",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "tus-js-client": "^1.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "antd-scss-theme-plugin": "^1.0.7",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "enzyme": "^3.10.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.14.2",
    "file-loader": "^4.0.0",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "image-webpack-loader": "5.0.0",
    "lint-prepush": "^0.4.1",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "react-hot-loader": "^4.11.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.3.0",
    "thread-loader": "^2.1.2",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "optionalDependencies": {
    "enzyme-adapter-react-16": "^1.14.0",
    "jest": "^24.8.0",
    "jest-canvas-mock": "^2.1.0",
    "jest-environment-jsdom": "^24.8.0",
    "jest-environment-jsdom-global": "^1.2.0",
    "jest-junit": "^6.4.0",
    "jest-localstorage-mock": "^2.4.0",
    "jest-sonar-reporter": "^2.0.0",
    "puppeteer": "^1.18.1"
  },
  "scripts": {
    "serve": "cross-env HOST=0.0.0.0 PORT=3020 webpack-dev-server --hot --env development",
    "build": "webpack --env production",
    "build-serve": "npm run build && npm run start",
    "start": "npx pm2 start server.js --no-daemon",
    "ci-test": "CI=true jest --env=jsdom --testResultsProcessor=jest-sonar-reporter --updateSnapshot --runInBand --coverage",
    "lint": "eslint",
    "format:check": "prettier --config .prettierrc.json",
    "format:check-all": "prettier --config .prettierrc.json src/*.js && prettier --config .prettierrc.json src/**/*.js && prettier --config .prettierrc.json src/**/**/*.js",
    "format:write": "prettier --config .prettierrc.json --write",
    "format:write-all": "prettier --config .prettierrc.json src/*.js --write && prettier --config .prettierrc.json src/**/*.js --write && prettier --config .prettierrc.json src/**/**/*.js --write",
    "test": "jest --env=jsdom --runInBand",
    "test:coverage": "npm test src -- --testResultsProcessor=jest-junit",
    "test:updateAll": "npm test -- -u",
    "test:watch": "npm test -- --watch"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost",
    "testEnvironment": "jest-environment-jsdom-global",
    "setupFiles": [
      "./src/setupTests.js",
      "jest-localstorage-mock",
      "jest-canvas-mock"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!src/index.js",
      "!src/App.js",
      "!src/fetchEnv.js",
      "!src/assetsTransformer.js",
      "!src/setupTests.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/src/assetsTransformer.js"
    }
  },
  "jestSonar": {
    "reportPath": "reports",
    "reportFile": "test-reporter.xml",
    "indent": 4
  },
  "jest-junit": {
    "output": "./coverage/tests-report.xml"
  },
  "browserslist": [
    "> 0.1%"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-prepush"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "npm run format:write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "lint-prepush": {
    "base": "develop",
    "tasks": {
      "*.js": [
        "jest --env=jsdom --runInBand --findRelatedTests"
      ]
    }
  }
}
