{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-logstash-dc"
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": []
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "5044-tcp",
            "protocol": "TCP",
            "port": 5044,
            "targetPort": 5044
          },
          {
            "name": "9600-tcp",
            "protocol": "TCP",
            "port": 9600,
            "targetPort": 9600
          }
        ],
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "maxSurge": "50%",
          "maxUnavailable": 0
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["${NAME}"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:${VERSION}"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}${SUFFIX}",
            "labels": {
              "name": "${NAME}${SUFFIX}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${NAME}",
                "image": " ",
                "env": [
                  {
                    "name": "LOGSTASH_HOME",
                    "value": "/app/logstash"
                  },
                  {
                    "name": "ELASTIC_CLOUD_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${ELASTIC_SECRET_NAME}",
                        "key": "logstash-cloud-id"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_CLOUD_AUTH",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${ELASTIC_SECRET_NAME}",
                        "key": "logstash-cloud-auth"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_HOST",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${ELASTIC_SECRET_NAME}",
                        "key": "elastic-host"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_USERNAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${ELASTIC_SECRET_NAME}",
                        "key": "logstash-username"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${ELASTIC_SECRET_NAME}",
                        "key": "logstash-password"
                      }
                    }
                  }
                ],
                "resources": {
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  },
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "/app/logstash/monitor",
                    "name": "${NAME}${SUFFIX}-log"
                  }
                ],
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {}
              }
            ],
            "volumes": [
              {
                "name": "${NAME}${SUFFIX}-log",
                "persistentVolumeClaim": {
                  "claimName": "mds-logs${SUFFIX}"
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "CPU_LIMIT",
      "value": "1"
    },
    {
      "name": "MEMORY_LIMIT",
      "value": "1Gi"
    },
    {
      "name": "CPU_REQUEST",
      "value": "200m"
    },
    {
      "name": "MEMORY_REQUEST",
      "value": "500Mi"
    },
    {
      "name": "NAME",
      "displayName": "Object names",
      "description": "The name of the OpenShift objects.",
      "value": "redis",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "VERSION",
      "required": true
    },
    {
      "name": "ELASTIC_SECRET_NAME",
      "value": "template.mds-elastic-secret"
    }
  ]
}
