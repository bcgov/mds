{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "bdd-stack-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name for all objects",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "VERSION",
      "required": true
    },
    {
      "name": "URL",
      "description": "URL of the application to run tests against",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "run": "bdd-test"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "bdd-test",
            "image": "docker-registry.default.svc:5000/empr-mds-tools/${NAME}:${VERSION}",
            "command": [
              "/bin/bash",
              "-c",
              "cd /home/jenkins/bdd-tests && ./gradlew chromeHeadlessTest"
            ],
            "env": [
              {
                "name": "BASEURL",
                "value": "${URL}"
              }
            ],
            "resources": {
              "limits": {
                "cpu": "1",
                "memory": "4Gi"
              },
              "requests": {
                "cpu": "1",
                "memory": "3Gi"
              }
            },
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Never",
        "activeDeadlineSeconds": 3600,
        "dnsPolicy": "ClusterFirst"
      },
      "status": {}
    }
  ]
}