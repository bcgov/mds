{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "bdd-stack-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name for all objects",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "VERSION",
      "required": true
    },
    {
      "name": "URL",
      "description": "URL of the application to run tests against",
      "required": true
    },
    {
      "name": "IDIR_CONFIG_NAME",
      "description": "Configuration name for the IDIR credentials",
      "required": true
    },
    {
      "name": "DB_CONFIG_NAME",
      "description": "Configuration name for the database",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-${VERSION}",
        "creationTimestamp": null,
        "labels": {
          "run": "bdd-test"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "bdd-test",
            "image": "docker-registry.default.svc:5000/empr-mds-tools/${NAME}:${VERSION}",
            "command": [
              "/bin/bash",
              "-c",
              "cd /home/jenkins/bdd-tests && ./run_tests.sh"
            ],
            "env": [
              {
                "name": "BASEURL",
                "value": "${URL}"
              },
              {
                "name": "IDIR_USERNAME",
                "value": "bdd-test-create"
              },
              {
                "name": "IDIR_PASSWORD",
                "valueFrom": {
                    "secretKeyRef": {
                        "name": "{IDIR_CONFIG_NAME}",
                        "key": "bdd-test-create"
                    }
                }
              },
              {
                "name": "DB_HOST",
                "value": "${DB_CONFIG_NAME}"
              },
              {
                "name": "DB_NAME",
                "value": "mds"
              },
              {
                "name": "DB_USER",
                "valueFrom": {
                    "secretKeyRef": {
                        "name": "{DB_CONFIG_NAME}",
                        "key": "database-user"
                    }
                }
              },
              {
                "name": "DB_PASS",
                "valueFrom": {
                    "secretKeyRef": {
                        "name": "{DB_CONFIG_NAME}",
                        "key": "database-password"
                    }
                }
              }

            ],
            "resources": {
              "limits": {
                "cpu": "500m",
                "memory": "2Gi"
              },
              "requests": {
                "cpu": "1",
                "memory": "4Gi"
              }
            },
            "imagePullPolicy": "Always"
          }
        ],
        "restartPolicy": "Never",
        "activeDeadlineSeconds": 3600,
        "dnsPolicy": "ClusterFirst"
      },
      "status": {}
    }
  ]
}