{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
	"name": "mds-python-dc",
	"annotations": {
	  "template.openshift.io/bindable": "false"
	}
  },
  "parameters": [
	{
	  "name": "NAME",
	  "displayName": "Name",
	  "description": "The name assigned to all of the frontend objects defined in this template.",
	  "required": true,
	  "value": "web-api"
	},
	{
	  "name": "SUFFIX",
	  "displayName": "Name",
	  "description": "The name assigned to all of the frontend objects defined in this template.",
	  "required": true
	},
	{
	  "name": "TAG_NAME",
	  "displayName": "Name",
	  "description": "The name assigned to all of the frontend objects defined in this template.",
	  "required": true,
	  "value": "latest"
	},
	{
	  "name": "APPLICATION_DOMAIN",
	  "displayName": "Application Hostname",
	  "description": "The exposed hostname that will route to the Node.js service, if left blank a value will be defaulted.",
	  "value": ""
	},
	{
		"name": "BASE_PATH",
		"required": false,
		"value": "/"
	},
	{
	  "name": "NODE_ENV",
	  "displayName": "Node Environment",
	  "description": "Environment for running node",
	  "value": "DEV"
	},
	{
	  "name": "KEYCLOAK_RESOURCE",
	  "displayName": "Resource ID",
	  "description": "Resource ID for keycloak",
	  "value": "mines-application-dev"
	},
	{
	  "name": "KEYCLOAK_CLIENT_ID",
	  "displayName": "Client ID",
	  "description": "Client ID for keycloak",
	  "value": "mines-application-dev"
	},
	{
	  "name": "KEYCLOAK_URL",
	  "displayName": "Keycloak URL",
	  "description": "URL of the keycloak server",
	  "value": "https://sso-test.pathfinder.gov.bc.ca/auth"
	},
	{
	  "name": "KEYCLOAK_ROLE_ADMIN",
	  "value": "mds-mine-admin"
	},
	{
	  "name": "KEYCLOAK_ROLE_CREATE",
	  "value": "mds-mine-create"
	},
	{
	  "name": "KEYCLOAK_ROLE_VIEW",
	  "value": "mds-mine-view"
	},
	{
	  "name": "API_URL",
	  "displayName": "API Url",
	  "description": "URL for the backend API",
	  "value": "http://localhost:3000"
	},
	{
		"name": "CPU_LIMIT",
		"value": "250m"
	},
	{
		"name": "MEMORY_LIMIT",
		"value": "750Mi"
	},
	{
		"name": "CPU_REQUEST",
		"value": "100m"
	},
	{
		"name": "MEMORY_REQUEST",
		"value": "512Mi"
	}
  ],
  "objects": [
	{
	  "kind": "ImageStream",
	  "apiVersion": "v1",
	  "metadata": {
		"name": "${NAME}",
		"labels": {
		  "shared": "true"
		},
		"annotations": {
		  "description": "Keeps track of changes in the application image"
		}
	  }
	},
	{
	  "kind": "Service",
	  "apiVersion": "v1",
	  "metadata": {
		"name": "${NAME}${SUFFIX}",
		"annotations": {
		  "description": "Exposes and load balances the application pods"
		}
	  },
	  "spec": {
		"ports": [
		  {
			"name": "web",
			"port": 3000,
			"targetPort": 3000
		  }
		],
		"selector": {
		  "name": "${NAME}${SUFFIX}"
		}
	  }
	},
	{
	  "kind": "Route",
	  "apiVersion": "v1",
	  "metadata": {
		"name": "${NAME}${SUFFIX}",
		"labels": {
		  "component": "${NAME}"
		}
	  },
	  "spec": {
		"host": "${APPLICATION_DOMAIN}",
		"tls": {
		  "termination": "edge",
		  "insecureEdgeTerminationPolicy": "Redirect"
		},
		"path": "${BASE_PATH}",
		"to": {
		  "kind": "Service",
		  "name": "${NAME}${SUFFIX}"
		}
	  }
	},
	{
	  "kind": "DeploymentConfig",
	  "apiVersion": "v1",
	  "metadata": {
		"name": "${NAME}${SUFFIX}",
		"annotations": {
		  "description": "Defines how to deploy the application server",
		  "template.alpha.openshift.io/wait-for-ready": "true"
		},
		"labels":{
		  "component": "${NAME}"
		}
	  },
	  "spec": {
		"strategy": {
		  "type": "Rolling"
		},
		"triggers": [
		  {
			"type": "ImageChange",
			"imageChangeParams": {
			  "automatic": true,
			  "containerNames": [
				"app"
			  ],
			  "from": {
				"kind": "ImageStreamTag",
				"name": "${NAME}:${TAG_NAME}"
			  }
			}
		  },
		  {
			"type": "ConfigChange"
		  }
		],
		"replicas": 1,
		"selector": {
		  "name": "${NAME}${SUFFIX}"
		},
		"template": {
		  "metadata": {
			"name": "${NAME}${SUFFIX}",
			"labels": {
			  "name": "${NAME}${SUFFIX}"
			}
		  },
		  "spec": {
			"containers": [
			  {
				"name": "app",
				"image": " ",
				"env": [
				  {
					"name": "API_URL",
					"value": "${API_URL}"
				  },
				  {
					"name": "NODE_ENV",
					"value": "${NODE_ENV}"
				  },
				  {
					"name": "BASE_PATH",
					"value": "${BASE_PATH}"
				  },
				  {
					"name": "ASSET_PATH",
					"value": "${BASE_PATH}/"
				  },
				  {
					"name": "KEYCLOAK_RESOURCE",
					"value": "${KEYCLOAK_RESOURCE}"
				  },
				  {
					"name": "KEYCLOAK_CLIENT_ID",
					"value": "${KEYCLOAK_CLIENT_ID}"
				  },
				  {
					"name": "KEYCLOAK_URL",
					"value": "${KEYCLOAK_URL}"
				  },
				  {
					"name": "KEYCLOAK_ROLE_ADMIN",
					"value": "${KEYCLOAK_ROLE_ADMIN}"
				  },
				  {
					"name": "KEYCLOAK_ROLE_CREATE",
					"value": "${KEYCLOAK_ROLE_CREATE}"
				  },
				  {
					"name": "KEYCLOAK_ROLE_VIEW",
					"value": "${KEYCLOAK_ROLE_VIEW}"
				  }
				],
				"resources": {
					"limits": {
						"cpu": "${CPU_LIMIT}",
						"memory": "${MEMORY_LIMIT}"
					},
					"requests": {
						"cpu": "${CPU_REQUEST}",
						"memory": "${MEMORY_REQUEST}"
					}
				},
				"ports": [
				  {
					"containerPort": 3000
				  }
				],
				"readinessProbe": {
				  "timeoutSeconds": 3,
				  "initialDelaySeconds": 3,
				  "httpGet": {
					"path": "${BASE_PATH}",
					"port": 3000
				  }
				},
				"livenessProbe": {
					"timeoutSeconds": 3,
					"initialDelaySeconds": 30,
					"httpGet": {
						"path": "${BASE_PATH}",
						"port": 3000
					}
				}
			  }
			]
		  }
		}
	  }
	},
	{
		"apiVersion": "autoscaling/v1",
		"kind": "HorizontalPodAutoscaler",
		"metadata": {
			"name": "${NAME}${SUFFIX}",
			"labels": {
				"name": "${NAME}${SUFFIX}"
			}
		},
		"spec": {
			"maxReplicas": 4,
			"minReplicas": 2,
			"scaleTargetRef": {
				"apiVersion": "v1",
				"kind": "DeploymentConfig",
				"name": "${NAME}${SUFFIX}"
			},
			"targetCPUUtilizationPercentage": 80
		}
	}
  ]
}
