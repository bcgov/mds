{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-backend-python-bc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "required": true
    },
    {
      "name": "ENV_NAME",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "basemds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "annotations": {
          "description": "Python Base Image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags":[
          {
            "name": "3.6",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/rhscl/python-36-rhel7:1-21"
            },
            "importPolicy": {},
            "referencePolicy": {
              "type": "Source"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "base-name":"mds"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags":[ ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "basemds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "build": "mds-python-backend"
        },
        "annotations": {

        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "SerialLatestOnly",
        "source": {
          "contextDir": "docker-images/mds-python-backend",
          "git": {
            "ref": "master",
            "uri": "${SOURCE_REPOSITORY_URL}"
          },
          "type": "Git"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "mds-python-36-rhel7mds${NAME_SUFFIX}:3.6"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "mds-python-backend{NAME_SUFFIX}:${ENV_NAME}"
          }
        },
        "resources": {},
        "postCommit": {},
        "nodeSelector": null,
        "successfulBuildsHistoryLimit": 5,
        "failedBuildsHistoryLimit": 5
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "annotations": {
          "description": "Defines how to build the application"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "SerialLatestOnly",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "master"
          },
          "contextDir": "app"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "mds-python-backend{NAME_SUFFIX}:${ENV_NAME}"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "mds${NAME_SUFFIX}:${ENV_NAME}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "1",
            "memory": "2Gi"
          },
          "requests": {
            "cpu": "1",
            "memory": "2Gi"
          }
        },
        "nodeSelector": null
      }
    }
  ]
}
