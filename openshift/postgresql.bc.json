            "generation": 1,
            "importPolicy": {},
            "referencePolicy": {
              "type": "Source"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },

    {
    "kind": "ImageStream",
    "apiVersion": "v1",
    "metadata": {
      "name": "${NAME}${NAME_SUFFIX}",
      "creationTimestamp": null,
      "labels": {},
      "annotations": {}
    },
    "spec": {
      "lookupPolicy": {
        "local": false
      },
      "output": {
        "to": {
          "kind": "ImageStreamTag",
          "name": "${NAME}:${TAG_NAME}"
        }
      },      
      "resources": {
        "limits": {
          "cpu": "750m",
          "memory": "3Gi"
        },
        "requests": {
          "cpu": "500m",
          "memory": "2Gi"
        }
      },
      "tags": [
        {
          "name": "7.5",
          "annotations": null,
          "from": {
            "kind": "ImageStreamTag",
            "name": "postgresql-9.6-oracle-fdw:v1-stable",
            "namespace": "bcgov"
          },
          "generation": 1,
          "importPolicy": {},
          "referencePolicy": {
            "type": "Source"
