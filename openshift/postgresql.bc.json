      "description": "A name used for all objects",
      "required": true
    },
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "TAG_NAME",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "rhel7",
        "labels": {
          "shared": "true"
        },
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": [
          {
            "name": "7.5",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/rhel7:7.5"
