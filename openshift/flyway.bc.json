{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "flyway",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name used for all objects",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name",
      "description": "A name used for all objects",
      "required": false
    },
    {
      "name": "VERSION",
      "displayName": "Name",
      "description": "The output/built ImageStream tag names",
      "required": true
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "required": true
    },
    {
      "name": "SOURCE_REPOSITORY_REF",
      "required": false,
      "value": "master"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "rhel",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags":[
          {
            "name": "7.5-409",
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/rhel7:7.5-409"
            },
            "importPolicy": {},
            "referencePolicy": {
              "type": "Source"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-client",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-client",
        "creationTimestamp": null,
        "labels": { },
        "annotations": { }
      },
      "spec": {
        "completionDeadlineSeconds": 1440,
        "successfulBuildsHistoryLimit": 3,
        "failedBuildsHistoryLimit": 3,
        "triggers": [
          {
            "type": "ImageChange",
            "imageChange": {}
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "SerialLatestOnly",
        "source": {
          "contextDir": "${SOURCE_CONTEXT_DIR}",
          "git": {
            "ref": "${SOURCE_REPOSITORY_REF}",
            "uri": "${SOURCE_REPOSITORY_URL}"
          },
          "type": "Git"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "rhel:7.5-409"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}${SUFFIX}-client:${VERSION}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "2",
            "memory": "2Gi"
          },
          "requests": {
            "cpu": "1",
            "memory": "2Gi"
          }
        }
      }
    }
  ]
}
