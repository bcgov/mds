{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-nginx-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name for all objects",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "VERSION",
      "required": true
    },
    {
      "name": "LOG_PVC_SIZE",
      "required": true
    },
    {
      "name": "ROUTE",
      "value": "/"
    },
    {
      "name": "PATH_PREFIX",
      "value": "/"
    },
    {
      "name": "CORE_SERVICE_URL",
      "value": "/"
    },
    {
      "name": "NRIS_API_SERVICE_URL",
      "value": "/"
    },
    {
      "name": "DOCUMENT_MANAGER_SERVICE_URL",
      "value": "/"
    },
    {
      "name": "MINESPACE_SERVICE_URL",
      "value": "/"
    },
    {
      "name": "API_SERVICE_URL",
      "value": "/"
    },
    {
      "name": "TUSD_SERVICE_URL",
      "value": "tusd"
    },
    {
      "name": "CORE_DOMAIN",
      "required": true
    },
    {
      "name": "MINESPACE_DOMAIN",
      "required": true
    },
    {
      "name": "CPU_LIMIT",
      "value": "200m"
    },
    {
      "name": "MEMORY_LIMIT",
      "value": "512Mi"
    },
    {
      "name": "CPU_REQUEST",
      "value": "150m"
    },
    {
      "name": "MEMORY_REQUEST",
      "value": "256Mi"
    },
    {
      "name": "REPLICA_MIN",
      "value": "1"
    },
    {
      "name": "REPLICA_MAX",
      "value": "1"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": []
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "maxSurge": "50%",
          "maxUnavailable": 0
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["nginx"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:${VERSION}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": "${{REPLICA_MIN}}",
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}${SUFFIX}",
            "labels": {
              "name": "${NAME}${SUFFIX}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "nginx",
                "image": " ",
                "env": [
                  {
                    "name": "PATH_PREFIX",
                    "value": "${PATH_PREFIX}"
                  },
                  {
                    "name": "CORE_SERVICE_URL",
                    "value": "${CORE_SERVICE_URL}"
                  },
                  {
                    "name": "NRIS_API_SERVICE_URL",
                    "value": "${NRIS_API_SERVICE_URL}"
                  },
                  {
                    "name": "DOCUMENT_MANAGER_SERVICE_URL",
                    "value": "${DOCUMENT_MANAGER_SERVICE_URL}"
                  },
                  {
                    "name": "MINESPACE_SERVICE_URL",
                    "value": "${MINESPACE_SERVICE_URL}"
                  },
                  {
                    "name": "API_SERVICE_URL",
                    "value": "${API_SERVICE_URL}"
                  },
                  {
                    "name": "CORE_DOMAIN",
                    "value": "${CORE_DOMAIN}"
                  },
                  {
                    "name": "MINESPACE_DOMAIN",
                    "value": "${MINESPACE_DOMAIN}"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  },
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "/var/log/nginx",
                    "name": "${NAME}${SUFFIX}-log"
                  },
                  {
                    "mountPath": "/etc/jaeger",
                    "name": "jaeger-config"
                  }
                ],
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "livenessProbe": {
                  "failureThreshold": 3,
                  "httpGet": {
                    "path": "/health",
                    "port": 8081,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 25,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "timeoutSeconds": 1
                },
                "readinessProbe": {
                  "failureThreshold": 3,
                  "httpGet": {
                    "path": "/health",
                    "port": 8081,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 25,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "timeoutSeconds": 1
                }
              },
              {
                "name": "promtail",
                "image": "grafana/promtail:k14-60b97e3",
                "command": [
                  "sh",
                  "-c",
                  "/usr/bin/promtail --config.file=/etc/promtail/nginx.yaml --client.url=http://loki:3100/loki/api/v1/push --client.external-labels=env=${VERSION},pod=$POD_NAME,node=$NODE_NAME,namespace=$NAMESPACE"
                ],
                "env": [
                  {
                    "name": "NODE_NAME",
                    "valueFrom": { "fieldRef": { "fieldPath": "spec.nodeName" } }
                  },
                  {
                    "name": "POD_NAME",
                    "valueFrom": { "fieldRef": { "fieldPath": "metadata.name" } }
                  },
                  {
                    "name": "NAMESPACE",
                    "valueFrom": { "fieldRef": { "fieldPath": "metadata.namespace" } }
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/var/log/nginx",
                    "name": "${NAME}${SUFFIX}-log",
                    "readOnly": true
                  },
                  {
                    "mountPath": "/etc/promtail",
                    "name": "promtail-config"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "100m",
                    "memory": "128Mi"
                  },
                  "requests": {
                    "cpu": "5m",
                    "memory": "16Mi"
                  }
                }
              },
              {
                "name": "jaeger-agent",
                "image": "jaegertracing/jaeger-agent:1.18.1",
                "args": [
                  "--reporter.type=tchannel",
                  "--reporter.tchannel.host-port=jaeger-collector:14267"
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/conf",
                    "name": "jaeger-config",
                    "readOnly": true
                  }
                ],
                "ports": [
                  { "containerPort": 5775, "protocol": "UDP" },
                  { "containerPort": 6831, "protocol": "UDP" },
                  { "containerPort": 6832, "protocol": "UDP" },
                  { "containerPort": 5778, "protocol": "TCP" }
                ],
                "resources": {
                  "limits": {
                    "cpu": "100m",
                    "memory": "128Mi"
                  },
                  "requests": {
                    "cpu": "5m",
                    "memory": "16Mi"
                  }
                }
              }
            ],
            "volumes": [
              { "emptyDir": {}, "name": "${NAME}${SUFFIX}-log" },
              {
                "name": "promtail-config",
                "configMap": {
                  "name": "promtail-config"
                }
              },
              {
                "name": "jaeger-config",
                "configMap": {
                  "name": "jaeger-config"
                }
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "autoscaling/v1",
      "kind": "HorizontalPodAutoscaler",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "labels": {
          "name": "${NAME}${SUFFIX}"
        }
      },
      "spec": {
        "maxReplicas": "${{REPLICA_MAX}}",
        "minReplicas": "${{REPLICA_MIN}}",
        "scaleTargetRef": {
          "apiVersion": "v1",
          "kind": "DeploymentConfig",
          "name": "${NAME}${SUFFIX}"
        },
        "targetCPUUtilizationPercentage": 95
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-core",
        "creationTimestamp": null,
        "labels": {
          "component": "${NAME}",
          "route": "core"
        }
      },
      "spec": {
        "host": "${CORE_DOMAIN}",
        "path": "${ROUTE}",
        "to": {
          "kind": "Service",
          "name": "${NAME}${SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge",
          "insecureEdgeTerminationPolicy": "Redirect"
        },
        "wildcardPolicy": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}-minespace",
        "creationTimestamp": null,
        "labels": {
          "component": "${NAME}",
          "route": "minespace"
        }
      },
      "spec": {
        "host": "${MINESPACE_DOMAIN}",
        "path": "${ROUTE}",
        "to": {
          "kind": "Service",
          "name": "${NAME}${SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge",
          "insecureEdgeTerminationPolicy": "Redirect"
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}
