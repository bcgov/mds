{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "Jenkins",
    "annotations": {
      "template.openshift.io/bindable": "false"
    }
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name used for all objects",
      "required": true
    },
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name",
      "description": "A name used for all objects",
      "required": false
    },
    {
      "name": "VERSION",
      "displayName": "Name",
      "description": "The output/built ImageStream tag names",
      "required": true
    },
    {
      "name": "GIT_REF",
      "displayName": "Git Reference",
      "description": "The git reference or branch.",
      "required": true,
      "value": "develop"
    },
    {
      "name": "SOURCE_CONTEXT_DIR",
      "displayName": "Source Context Directory",
      "description": "The source context directory.",
      "required": false,
      "value": "openshift/templates/tools/jenkins"
    },
    {
      "name": "SOURCE_REPOSITORY_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to the Git repository.",
      "required": true,
      "value": "https://github.com/bcgov/mds.git"
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "jenkins-2-rhel7",
        "generation": 1,
        "creationTimestamp": null,
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": [
          {
            "name": "v3.11.98",
            "annotations": null,
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/openshift3/jenkins-2-rhel7:v3.11.98"
            },
            "generation": 1,
            "importPolicy": {},
            "referencePolicy": {
              "type": "Local"
            }
          }
        ]
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-base",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": []
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {},
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewBuild"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": []
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-base"
      },
      "spec": {
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${GIT_REF}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "jenkins-2-rhel7:v3.11.98"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}-base:${VERSION}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "1",
            "memory": "2.5Gi"
          },
          "requests": {
            "cpu": "500m",
            "memory": "1Gi"
          }
        },
        "completionDeadlineSeconds": 1200,
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange"
          }
        ]
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {},
        "annotations": {
          "openshift.io/generated-by": "OpenShiftNewBuild"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${SOURCE_REPOSITORY_URL}",
            "ref": "${GIT_REF}"
          },
          "contextDir": "${SOURCE_CONTEXT_DIR}"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "${NAME}-base:${VERSION}"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:${VERSION}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "1",
            "memory": "2.5Gi"
          },
          "requests": {
            "cpu": "500m",
            "memory": "1Gi"
          }
        },
        "postCommit": {},
        "nodeSelector": null
      }
    }
  ]
}
