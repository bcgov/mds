{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-python-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name for all objects",
      "required": true
    },
    {
      "name": "SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "FLYWAY_NAME",
      "displayName": "Name",
      "description": "A name for flyway objects",
      "required": true
    },
    {
      "name": "DB_CONFIG_NAME",
      "displayName": "Database Config Name",
      "description": "Configuration name for the database",
      "required": true
    },
    {
      "name": "DB_NRIS_CONFIG_NAME",
      "description": "Configuration name for the nris database",
      "required": true
    },
    {
      "name": "VERSION",
      "required": true
    },
    {
      "name": "JWT_OIDC_WELL_KNOWN_CONFIG",
      "displayName": "Keycloak config URL",
      "required": true
    },
    {
      "name": "JWT_OIDC_AUDIENCE",
      "displayName": "Keycloak clientId",
      "required": true
    },
    {
      "name": "APPLICATION_DOMAIN",
      "required": true
    },
    {
      "name": "BASE_PATH",
      "required": false,
      "value": "/"
    },
    {
      "name": "MDS_NROS_DOCUMENT_API_SECRET",
      "required": false,
      "value": "template.mds-nros-client-service"
    },
    {
      "name": "MDS_VFCBC_DOCUMENT_API_SECRET",
      "required": false,
      "value": "template.mds-vfcbc-client-service"
    },
    {
      "name": "MDS_NRIS_API_SECRET",
      "required": false,
      "value": "template.mds-nris-secret"
    },
    {
      "name": "MDS_IDIR_SECRET",
      "required": false,
      "value": "template.mds-idir-secret"
    },
    {
      "name": "MDS_METABASE_SECRET",
      "required": false,
      "value": "template.mds-metabase-key"
    },
    {
      "name": "METABASE_SITE_URL",
      "required": false,
      "value": "https://mds-metabase-empr-mds-prod.pathfinder.gov.bc.ca"
    },
    {
      "name": "REDIS_CONFIG_NAME",
      "required": false,
      "value": "template.mds-redis-secret"
    },
    {
      "name": "CACHE_REDIS_HOST",
      "required": true
    },
    {
      "name": "CPU_LIMIT",
      "value": "200m"
    },
    {
      "name": "MEMORY_LIMIT",
      "value": "1Gi"
    },
    {
      "name": "CPU_REQUEST",
      "value": "150m"
    },
    {
      "name": "MEMORY_REQUEST",
      "value": "768Mi"
    },
    {
      "name": "UWSGI_PROCESSES",
      "value": "2"
    },
    {
      "name": "UWSGI_THREADS",
      "value": "4"
    },
    {
      "name": "REPLICA_MIN",
      "value": "1"
    },
    {
      "name": "REPLICA_MAX",
      "value": "1"
    },
    {
      "name": "MDS_ELASTIC_SECRET",
      "required": false,
      "value": "template.mds-elastic-secret"
    },
    {
      "name": "ELASTIC_ENABLED",
      "value": "0"
    },
    {
      "name": "ELASTIC_SERVICE_NAME",
      "value": "MDS Dev"
    },
    {
      "name": "ENVIRONMENT_NAME",
      "displayName": "Environment Name (Environment Id)",
      "description": "The name or Id of the environment.  This variable is used by the webhook integration to identify the environment in which the backup notifications originate.",
      "required": false,
      "value": "dev"
    },
    {
      "name": "API_URL",
      "required": true
    },
    {
      "name": "NRIS_API_URL",
      "required": true
    },
    {
      "name": "DOCUMENT_MANAGER_URL",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags": []
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${FLYWAY_NAME}",
        "generation": 1,
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {}
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "pre": {
              "failurePolicy": "Retry",
              "execNewPod": {
                "containerName": "flyway-migration",
                "command": [
                  "bash",
                  "-c",
                  "$FLYWAY_HOME/scripts/run_migrations.sh"
                ]
              }
            },
            "maxSurge": "50%",
            "maxUnavailable": 0,
            "timeoutSeconds": 1200
          },
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["app"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${NAME}:${VERSION}"
              }
            }
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": ["flyway-migration"],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${FLYWAY_NAME}:${VERSION}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": "${{REPLICA_MIN}}",
        "test": false,
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "${NAME}${SUFFIX}",
            "creationTimestamp": null,
            "labels": {
              "name": "${NAME}${SUFFIX}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "app",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 5000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DB_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "DB_HOST",
                    "value": "${DB_CONFIG_NAME}"
                  },
                  {
                    "name": "DB_PASS",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "DB_PORT",
                    "value": "5432"
                  },
                  {
                    "name": "DB_NAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "NRIS_USER_NAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "user-name"
                      }
                    }
                  },
                  {
                    "name": "NRIS_PASS",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "password"
                      }
                    }
                  },
                  {
                    "name": "NRIS_TOKEN_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "token-url"
                      }
                    }
                  },
                  {
                    "name": "NRIS_REMOTE_CLIENT_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "user-name"
                      }
                    }
                  },
                  {
                    "name": "NRIS_REMOTE_CLIENT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "password"
                      }
                    }
                  },
                  {
                    "name": "NRIS_REMOTE_TOKEN_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NRIS_API_SECRET}",
                        "key": "token-url"
                      }
                    }
                  },
                  {
                    "name": "LDAP_IDIR_USERNAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_IDIR_SECRET}",
                        "key": "username"
                      }
                    }
                  },
                  {
                    "name": "LDAP_IDIR_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_IDIR_SECRET}",
                        "key": "password"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_ENABLED",
                    "value": "${ELASTIC_ENABLED}"
                  },
                  {
                    "name": "ELASTIC_SERVICE_NAME",
                    "value": "${ELASTIC_SERVICE_NAME}"
                  },
                  {
                    "name": "ELASTIC_SECRET_TOKEN",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_ELASTIC_SECRET}",
                        "key": "secret-token"
                      }
                    }
                  },
                  {
                    "name": "ELASTIC_SERVER_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_ELASTIC_SECRET}",
                        "key": "server-url"
                      }
                    }
                  },
                  {
                    "name": "NRIS_API_URL",
                    "value": "${NRIS_API_URL}"
                  },
                  {
                    "name": "FLASK_RUN_PORT",
                    "value": "5000"
                  },
                  {
                    "name": "FLASK_RUN_HOST",
                    "value": "0.0.0.0"
                  },
                  {
                    "name": "UWSGI_PROCESSES",
                    "value": "${UWSGI_PROCESSES}"
                  },
                  {
                    "name": "UWSGI_THREADS",
                    "value": "${UWSGI_THREADS}"
                  },
                  {
                    "name": "CACHE_REDIS_HOST",
                    "value": "${CACHE_REDIS_HOST}"
                  },
                  {
                    "name": "CACHE_REDIS_PASS",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${REDIS_CONFIG_NAME}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "JWT_OIDC_WELL_KNOWN_CONFIG",
                    "value": "${JWT_OIDC_WELL_KNOWN_CONFIG}"
                  },
                  {
                    "name": "JWT_OIDC_AUDIENCE",
                    "value": "${JWT_OIDC_AUDIENCE}"
                  },
                  {
                    "name": "JWT_OIDC_ALGORITHMS",
                    "value": "RS256"
                  },
                  {
                    "name": "BASE_PATH",
                    "value": "${BASE_PATH}"
                  },
                  {
                    "name": "DOCUMENT_MANAGER_URL",
                    "value": "${DOCUMENT_MANAGER_URL}"
                  },
                  {
                    "name": "ENVIRONMENT_NAME",
                    "value": "${ENVIRONMENT_NAME}"
                  },
                  {
                    "name": "METABASE_EMBEDDING_SECRET_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_METABASE_SECRET}",
                        "key": "embedding-secret-key"
                      }
                    }
                  },
                  {
                    "name": "METABASE_SITE_URL",
                    "value": "${METABASE_SITE_URL}"
                  },
                  {
                    "name": "NROS_TOKEN_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NROS_DOCUMENT_API_SECRET}",
                        "key": "token-url"
                      }
                    }
                  },
                  {
                    "name": "NROS_CLIENT_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NROS_DOCUMENT_API_SECRET}",
                        "key": "service-client"
                      }
                    }
                  },
                  {
                    "name": "NROS_CLIENT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_NROS_DOCUMENT_API_SECRET}",
                        "key": "password"
                      }
                    }
                  },
                  {
                    "name": "VFCBC_TOKEN_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_VFCBC_DOCUMENT_API_SECRET}",
                        "key": "token-url"
                      }
                    }
                  },
                  {
                    "name": "VFCBC_CLIENT_ID",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_VFCBC_DOCUMENT_API_SECRET}",
                        "key": "service-client"
                      }
                    }
                  },
                  {
                    "name": "VFCBC_CLIENT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${MDS_VFCBC_DOCUMENT_API_SECRET}",
                        "key": "password"
                      }
                    }
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "${CPU_LIMIT}",
                    "memory": "${MEMORY_LIMIT}"
                  },
                  "requests": {
                    "cpu": "${CPU_REQUEST}",
                    "memory": "${MEMORY_REQUEST}"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "${BASE_PATH}/health",
                    "port": 5000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 3,
                  "periodSeconds": 20
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "${BASE_PATH}/health",
                    "port": 5000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 15,
                  "timeoutSeconds": 3,
                  "periodSeconds": 15
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "IfNotPresent"
              },
              {
                "name": "flyway-migration",
                "command": ["cat"],
                "stdin": true,
                "image": " ",
                "env": [
                  {
                    "name": "FLYWAY_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-admin-user"
                      }
                    }
                  },
                  {
                    "name": "FLYWAY_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-admin-password"
                      }
                    }
                  },
                  {
                    "name": "FLYWAY_DB_NAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "FLYWAY_DB_HOST",
                    "value": "${DB_CONFIG_NAME}"
                  },
                  {
                    "name": "FLYWAY_URL",
                    "value": "jdbc:postgresql://${DB_CONFIG_NAME}/mds"
                  },
                  {
                    "name": "PGUSER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "PGHOST",
                    "value": "${DB_CONFIG_NAME}"
                  },
                  {
                    "name": "PGPASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "PGDATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "NRIS_USER_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_NRIS_CONFIG_NAME}",
                        "key": "database-nris-password"
                      }
                    }
                  },
                  {
                    "name": "LOGSTASH_USER_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "logstash-user-password"
                      }
                    }
                  },
                  {
                    "name": "METABASE_USER_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "metabase-user-password"
                      }
                    }
                  },
                  {
                    "name": "DOCMAN_USER_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "${DB_CONFIG_NAME}",
                        "key": "docman-user-password"
                      }
                    }
                  },
                  {
                    "name": "FLYWAY_OUT_OF_ORDER",
                    "value": "true"
                  },
                  {
                    "name": "FLYWAY_CONNECT_RETRIES",
                    "value": "300"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "100m",
                    "memory": "384Mi"
                  },
                  "requests": {
                    "cpu": "50m",
                    "memory": "128Mi"
                  }
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "securityContext": {}
          }
        }
      }
    },
    {
      "apiVersion": "autoscaling/v1",
      "kind": "HorizontalPodAutoscaler",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "labels": {
          "name": "${NAME}${SUFFIX}"
        }
      },
      "spec": {
        "maxReplicas": "${{REPLICA_MAX}}",
        "minReplicas": "${{REPLICA_MIN}}",
        "scaleTargetRef": {
          "apiVersion": "v1",
          "kind": "DeploymentConfig",
          "name": "${NAME}${SUFFIX}"
        },
        "targetCPUUtilizationPercentage": 95
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}${SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": {
          "name": "${NAME}${SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    }
  ]
}
