{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "zap",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "A name used for all objects",
      "required": true,
      "value": "zap"
    },
    {
      "name": "APP",
      "displayName": "APP",
      "description": "A name used for all objects",
      "required": true,
      "value": "zap"
    },
    {
      "name": "URL",
      "displayName": "The URL",
      "description": "A suffix appended to all objects",
      "required": true,
      "value": "https://mds-frontend-empr-mds-prod.pathfinder.gov.bc.ca/"
    }
  ],
  "objects": [
    {
      "kind": "Pod",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "run": "zap",
          "app": "${APP}"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "zap",
            "image": "172.50.0.2:5000/openshift/jenkins-slave-zap",
            "command": [
              "/bin/bash",
              "-c",
              "export HOME=/home/jenkins; source /usr/local/bin/generate_container_user; source /usr/local/bin/configure-slave; /zap/zap-baseline.py -t ${URL}/; if [ $? -le 2 ]; then exit 0; else exit 1; fi"
            ],
            "resources": {
              "limits": {
                "cpu": "1.5",
                "memory": "3Gi"
              },
              "requests": {
                "cpu": "500m",
                "memory": "1Gi"
              }
            },
            "imagePullPolicy": "IfNotPresent"
          }
        ],
        "restartPolicy": "Never",
        "activeDeadlineSeconds": 360,
        "dnsPolicy": "ClusterFirst"
      },
      "status": {}
    }
  ]
}
