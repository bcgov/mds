{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "sonar",
        "creationTimestamp": null
    },
    "parameters": [
        {
            "name": "NAME",
            "displayName": "Name",
            "description": "A name used for all objects",
            "required": true,
            "value": "sonar-runner"
        },
        {
            "name": "IMAGE",
            "displayName": "Image Namespace",
            "description": "Docker registry reference image",
            "required": true
        },
        {
            "name": "SONAR_HOST_URL",
            "displayName": "SonarQube host",
            "description": "SonarQube server",
            "required": true,
            "value": "https://sonarqube-empr-mds-tools.pathfinder.gov.bc.ca"
        },
        {
            "name": "DB_CONFIG_NAME",
            "displayName": "Database Config Name",
            "description": "Configuration name for the database",
            "required": true
        },
        {
            "name": "GIT_BRANCH",
            "description": "Current git branch name",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${NAME}",
                "creationTimestamp": null,
                "labels": { }
            },
            "spec": {
                "containers": [
                    {
                        "name": "test",
                        "image": "${IMAGE}",
                        "command": [
                            "container-entrypoint",
                            "bash",
                            "-c",
                            "./run_tests.sh"
                        ],
                        "resources": {
                            "limits": {
                                "cpu": "500m",
                                "memory": "2Gi"
                            },
                            "requests": {
                                "cpu": "250m",
                                "memory": "1Gi"
                            }
                        },
                        "env": [
                            {
                                "name": "SONAR_HOST_URL",
                                "value": "${SONAR_HOST_URL}"
                            },
                            {
                                "name": "DB_USER",
                                "valueFrom": {
                                  "secretKeyRef": {
                                    "name": "${DB_CONFIG_NAME}",
                                    "key": "database-user"
                                  }
                                }
                              },
                              {
                                "name": "DB_HOST",
                                "value": "${DB_CONFIG_NAME}"
                              },
                              {
                                "name": "DB_PASS",
                                "valueFrom": {
                                  "secretKeyRef": {
                                    "name": "${DB_CONFIG_NAME}",
                                    "key": "database-password"
                                  }
                                }
                              },
                              {
                                "name": "DB_PORT",
                                "value": "5432"
                              },
                              {
                                "name": "DB_NAME_TEST",
                                "value": "mds_test"
                              },
                              {
                                "name": "GIT_BRANCH",
                                "value": "${GIT_BRANCH}"
                              }
                        ],
                        "imagePullPolicy": "Always"
                    }
                ],
                "restartPolicy": "Never",
                "activeDeadlineSeconds": 900,
                "dnsPolicy": "ClusterFirst"
            },
            "status": {}
        }
    ]
}