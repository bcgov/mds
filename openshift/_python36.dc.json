{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-backend-python-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "BUILD_ENV_NAME",
      "required": true
    },
    {
      "name": "ENV_NAME",
      "required": true
    },
    {
      "name": "HOST",
      "required": false,
      "value": ""
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "base-name":"mds"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 180,
          },
          "resources": {},
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mds-backend-pythonmds${NAME_SUFFIX}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "mds${NAME_SUFFIX}:${ENV_NAME}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "mds${NAME_SUFFIX}",
            "creationTimestamp": null,
            "labels": {
              "name": "mds${NAME_SUFFIX}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "mds-backend-pythonmds${NAME_SUFFIX}",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 5000,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "250m",
                    "memory": "768Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "512Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 5000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 60,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 6
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 5000,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 5,
                  "timeoutSeconds": 2,
                  "periodSeconds": 5,
                  "successThreshold": 1,
                  "failureThreshold": 10
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "frontend": "true"
        },
        "annotations": { }
      },
      "spec": {
        "host": "${HOST}",
        "path": "/gwells",
        "to": {
          "kind": "Service",
          "name": "mds${NAME_SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge"
        },
        "wildcardPolicy": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "mdsmds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": { }
      },
      "spec": {
        "host": "${HOST}",
        "path": "/mds/",
        "to": {
          "kind": "Service",
          "name": "mds-mds${NAME_SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge"
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}
