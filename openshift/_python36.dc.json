{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "BUILD_ENV_NAME",
      "required": true
    },
    {
      "name": "ENV_NAME",
      "required": true
    },
    {
      "name": "HOST",
      "required": false,
      "value": ""
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds",
        "creationTimestamp": null,
        "labels": {
          "base-name":"mds",
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds-static",
        "creationTimestamp": null,
        "labels": {
          "base-name":"mds-static",
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "type": "Opaque",
      "metadata": {
        "name": "minio-access-parameters${NAME_SUFFIX}",
        "creationTimestamp": null,
        "annotations": {
          "as-copy-of": "template.mds-minio-secrets"
        }
      },
      "data": {
        "MINIO_ACCESS_KEY": null,
        "MINIO_SECRET_KEY": null,
        "S3_HOST": null,
        "S3_ROOT_BUCKET": null
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "type": "Opaque",
      "metadata": {
        "creationTimestamp": null,
        "name": "mds-django${NAME_SUFFIX}",
        "annotations": {
          "as-copy-of": "template.mds-django-secrets"
        }
      },
      "data": {
        "admin_password": null,
        "admin_url": null,
        "admin_user": null,
        "secret_key": null
      }
    },
    {
      "kind": "Secret",
      "apiVersion": "v1",
      "type": "kubernetes.io/basic-auth",
      "metadata": {
        "creationTimestamp": null,
        "name": "mds-database-credentials${NAME_SUFFIX}",
        "annotations": {
          "as-copy-of": "template.mds-database-credentials"
        }
      },
      "data": {
        "password": null,
        "postgres_admin_password": null,
        "username": null
      }
    },
    {
      "apiVersion": "v1",
      "data": {
        "DB_REPLICATE": "None",
        "DJANGO_DEBUG": "False"
      },
      "kind": "ConfigMap",
      "metadata": {
        "creationTimestamp": null,
        "name": "mds-global-config${NAME_SUFFIX}",
        "annotations": {
          "as-copy-of": "template.mds-global-config"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 180,
            "pre": {
              "failurePolicy": "Retry",
              "execNewPod": {
                "command": [
                  "/bin/bash",
                  "-c",
                  "psql -qtAX -c 'select 1'"
                ],
                "containerName": "mds-app",
                "env": [
                  {
                    "name": "PGDATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "PGUSER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "PGPASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "PGHOST",
                    "value": "mds-pgsql${NAME_SUFFIX}"
                  },
                  {
                    "name": "DISABLE_MIGRATE",
                    "value": "true"
                  }
                ]
              }
            },
            "mid": {
              "failurePolicy": "Retry",
              "execNewPod": {
                "command": [
                  "/usr/bin/container-entrypoint",
                  "bash",
                  "-c",
                  "/opt/app-root/src/scripts/post-deploy.sh && cd /opt/app-root/src && python manage.py migrate --noinput"
                ],
                "containerName": "mds-app"
              }
            }
          },
          "resources": {},
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mds-app"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "mds:${ENV_NAME}"
              }
            }
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mds-static"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "mds-static:${ENV_NAME}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 2,
        "test": false,
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "mds${NAME_SUFFIX}",
            "creationTimestamp": null,
            "labels": {
              "name": "mds${NAME_SUFFIX}"
            }
          },
          "spec": {
            "initContainers": [
              {
                "name": "check-db",
                "image": "registry.access.redhat.com/rhscl/postgresql-95-rhel7@sha256:31d46b178b84cd92e1be5348f02a75f6a39867d5a57eb099b7c864deaaf02a49",
                "command": [
                  "/bin/bash",
                  "-c",
                  "psql -qtAX -c 'select 1'"
                ],
                "env": [
                  {
                    "name": "PGDATABASE",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "PGUSER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "PGPASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "PGHOST",
                    "value": "mds-pgsql${NAME_SUFFIX}"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "50m",
                    "memory": "256Mi"
                  },
                  "requests": {
                    "cpu": "10m",
                    "memory": "128Mi"
                  }
                }
              }
            ],
            "containers": [
              {
                "name": "mds-app",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DATABASE_SERVICE_NAME",
                    "value": "mds-pgsql${NAME_SUFFIX}"
                  },
                  {
                    "name": "DATABASE_ENGINE",
                    "value": "postgresql"
                  },
                  {
                    "name": "DATABASE_NAME",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-name"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-user"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-pgsql${NAME_SUFFIX}",
                        "key": "database-password"
                      }
                    }
                  },
                  {
                    "name": "DATABASE_SCHEMA",
                    "value": "public"
                  },
                  {
                    "name": "POSTGRESQL_ADMIN_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-database-credentials${NAME_SUFFIX}",
                        "key": "postgres_admin_password"
                      }
                    }
                  },
                  {
                    "name": "APP_CONFIG",
                    "value": "/opt/app-root/src/gunicorn.cfg"
                  },
                  {
                    "name": "DJANGO_SECRET_KEY",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-django${NAME_SUFFIX}",
                        "key": "secret_key"
                      }
                    }
                  },
                  {
                    "name": "DJANGO_ADMIN_URL",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-django${NAME_SUFFIX}",
                        "key": "admin_url"
                      }
                    }
                  },
                  {
                    "name": "DJANGO_ADMIN_USER",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-django${NAME_SUFFIX}",
                        "key": "admin_user"
                      }
                    }
                  },
                  {
                    "name": "DJANGO_ADMIN_PASSWORD",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "mds-django${NAME_SUFFIX}",
                        "key": "admin_password"
                      }
                    }
                  },
                  {
                    "name": "DJANGO_DEBUG",
                    "valueFrom": {
                      "configMapKeyRef": {
                        "key": "DJANGO_DEBUG",
                        "name": "mds-global-config${NAME_SUFFIX}"
                      }
                    }
                  },
                  {
                    "name": "ENABLE_GOOGLE_ANALYTICS",
                    "value": "False"
                  },
                  {
                    "name": "ENABLE_DATA_ENTRY",
                    "value": "True"
                  },
                  {
                    "name": "ENABLE_ADDITIONAL_DOCUMENTS",
                    "value": "True"
                  },
                  {
                    "name": "APP_CONTEXT_ROOT",
                    "value": "mds"
                  },
                  {
                    "name": "SESSION_COOKIE_SECURE",
                    "value": "True"
                  },
                  {
                    "name": "CSRF_COOKIE_SECURE",
                    "value": "True"
                  },
                  {
                    "name": "DB_REPLICATE",
                    "valueFrom": {
                      "configMapKeyRef": {
                        "key": "DB_REPLICATE",
                        "name": "mds-global-config${NAME_SUFFIX}"
                      }
                    }
                  },
                  {
                    "name": "S3_HOST",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "minio-access-parameters${NAME_SUFFIX}",
                        "key": "S3_HOST"
                      }
                    }
                  },
                  {
                    "name": "S3_ROOT_BUCKET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "minio-access-parameters${NAME_SUFFIX}",
                        "key": "S3_ROOT_BUCKET"
                      }
                    }
                  },
                  {
                    "name": "WEB_CONCURRENCY",
                    "value": "4"
                  },
                  {
                    "name": "GUNICORN_WORKERS",
                    "value": "4"
                  },
                  {
                    "name": "ENFORCE_ENV_VARIABLES",
                    "value": "False"
                  },
                  {
                    "name": "DISABLE_MIGRATE",
                    "value": "true"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "250m",
                    "memory": "768Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "512Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/mds/health",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 60,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 6
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/mds/health",
                    "port": 8080,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 5,
                  "timeoutSeconds": 2,
                  "periodSeconds": 5,
                  "successThreshold": 1,
                  "failureThreshold": 10
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "Always"
              },
              {
                "name": "mds-static",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 2015,
                    "protocol": "TCP"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "8m",
                    "memory": "24Mi"
                  },
                  "requests": {
                    "cpu": "5m",
                    "memory": "16Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/mds/static/mds/icons/geolocate.png",
                    "port": 2015,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 60,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 6
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/mds/static/mds/icons/geolocate.png",
                    "port": 2015,
                    "scheme": "HTTP"
                  },
                  "initialDelaySeconds": 5,
                  "timeoutSeconds": 2,
                  "periodSeconds": 5,
                  "successThreshold": 1,
                  "failureThreshold": 10
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "terminationGracePeriodSeconds": 30,
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
            "schedulerName": "default-scheduler"
          }
        }
      }
    },
    {
      "apiVersion": "autoscaling/v1",
      "kind": "HorizontalPodAutoscaler",
      "metadata": {
        "creationTimestamp": null,
        "labels": { },
        "name": "mds${NAME_SUFFIX}"
      },
      "spec": {
        "maxReplicas": 5,
        "minReplicas": 2,
        "scaleTargetRef": {
          "apiVersion": "v1",
          "kind": "DeploymentConfig",
          "name": "mds${NAME_SUFFIX}"
        },
        "targetCPUUtilizationPercentage": 90
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          },{
            "name": "static",
            "protocol": "TCP",
            "port": 2015,
            "targetPort": 2015
          }
        ],
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "frontend": "true"
        },
        "annotations": { }
      },
      "spec": {
        "host": "${HOST}",
        "path": "/mds",
        "to": {
          "kind": "Service",
          "name": "mds${NAME_SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge"
        },
        "wildcardPolicy": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds-static${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": { }
      },
      "spec": {
        "host": "${HOST}",
        "path": "/mds/static/",
        "to": {
          "kind": "Service",
          "name": "mds${NAME_SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "static"
        },
        "tls": {
          "termination": "edge"
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}