{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "mds-python-dc",
    "creationTimestamp": null
  },
  "parameters": [
    {
      "name": "NAME_SUFFIX",
      "displayName": "Name Suffix",
      "description": "A suffix appended to all objects",
      "required": true
    },
    {
      "name": "BUILD_ENV_NAME",
      "required": true
    },
    {
      "name": "ENV_NAME",
      "required": true
    },
    {
      "name": "HOST",
      "required": false,
      "value": ""
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "rhscl-python-36-rhel7",
        "creationTimestamp": null,
        "annotations": {
          "description": "Python Base Image"
        },
        "labels": {
          "shared": "true"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-base",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {
          "description": "Python runtime image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        }
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "shared": "true"
        },
        "annotations": {
          "description": "Keeps track of changes in the application image"
        }
      },
      "spec": {
        "lookupPolicy": {
          "local": false
        },
        "tags":[ ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Defines how to deploy the application server"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate",
          "recreateParams": {
            "timeoutSeconds": 180
          },
          "resources": {},
          "activeDeadlineSeconds": 21600
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "mds-python-backend"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "mds:${ENV_NAME}"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "template": {
          "metadata": {
            "name": "mds${NAME_SUFFIX}",
            "creationTimestamp": null,
            "labels": {
              "name": "mds${NAME_SUFFIX}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "mds-python-backend",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 5000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "SAMPLE_ENV_VAR",
                    "value": "VALUE"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "250m",
                    "memory": "768Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "512Mi"
                  }
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "Always"
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "securityContext": {},
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": null,
        "annotations": {
          "description": "Exposes and load balances the application pods"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": {
          "name": "mds${NAME_SUFFIX}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "mds${NAME_SUFFIX}",
        "creationTimestamp": null,
        "labels": {
          "frontend": "true"
        },
        "annotations": { }
      },
      "spec": {
        "host": "${HOST}",
        "path": "/mds",
        "to": {
          "kind": "Service",
          "name": "mds${NAME_SUFFIX}",
          "weight": 100
        },
        "port": {
          "targetPort": "web"
        },
        "tls": {
          "termination": "edge"
        },
        "wildcardPolicy": "None"
      }
    }
  ]
}